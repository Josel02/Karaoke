extends layout

block content
  div.container.py-4
    h1.text-center.mb-4 Mis Proyectos

    div.container
      div.row
        each project in projects
          div.col-md-4.mb-4
            div.card.h-100.text-center.d-flex.flex-column
              img.mx-auto.mt-3(src=`/images/icons/${project.icon}.png`, alt="Icono del proyecto" width="120" height="120")
              div.card-body.d-flex.flex-column
                h5.card-title.mt-3= project.name
                p.text-muted.mb-0(data-created-at=project.created_at) Creado el: #{project.created_at}
              div.d-flex.justify-content-center.mb-3
                a.btn.btn-primary.me-1(href=`/projects/view/${project.id}`) Ver m√°s
                form(data-project-id=project.id, class="delete-form", method="post", action=`/projects/delete/${project.id}`)
                  button.btn.btn-danger.ms-1(type="button") Eliminar

  script(src="/javascripts/project.js")
