extends layout

block content
  h1 Sincronización Manual de Karaoke
  form(id='karaokeForm', method='post', enctype='multipart/form-data')
    label(for='projectName') Nombre del Proyecto:
    input(type='text', id='projectName', name='projectName', required)
    br
    label(for='audioFile') Cargar Base Musical:
    input(type='file', id='audioFile', name='audioFile', accept='audio/*', required)
    br
    label(for='lyrics') Pega la letra:
    textarea(id='lyrics', name='lyrics', rows='10', cols='50') Pega la letra aquí...
    br
    button(type='button', id='syncButton') Iniciar Sincronización
  div(id='syncSection', style='display:none')
    // Reproductor de audio sin controles predeterminados
    audio(id='audioPlayer')
    // Botones personalizados
    button(type='button', id='playButton') Play
    button(type='button', id='pauseButton') Pause
    button(type='button', id='resetButton') Reiniciar Sincronización
    // Lista de letras
    ul(id='lyricsList')
    // Botón para marcar tiempos
    button(type='button', id='markButton') Marcar Tiempo
  script(src='/javascripts/sync.js')
